<%= form_with model: @article do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>

        <% @article.errors.full_messages_for(:title).each do |message|  %>
            <div>  <%= message %>  </div>
        <% end %>
    </div>

    <div>
        <%= f.label :body %>
        <%= f.text_field :body %>

        <% @article.errors.full_messages_for(:body).each do |message|  %>
            <div>  <%= message %>  </div>
        <% end %>
    </div>

    <div>
        <%= f.label :status %>
        <%= f.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>

    <%= f.submit %>
<% end %>