<%= form_with model: [ @article, @article.comments.build] do |c| %>

    <p>
        <%= c.label :user %>
        <%= c.text_field :user %>
    </p>
    <p>
        <%= c.label :body %>
        <%= c.text_area :body %>
    </p>

      <p>
        <%= c.label :status %>
        <%= c.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </p>

<%= c.submit %>
<% end  %>